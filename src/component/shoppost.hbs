<div class="row g-2">
    {{#each cards}}
    <div class="col-3">
        <div class="card text-bg-dark">
            <div class="card-header"><b>{{title}}</b>
                {{#if isTop}}<span class="badge text-bg-danger rounded-pill text-uppercase ms-2">
                    Top</span>{{/if}}
                {{#if isNew}}<span class="badge text-bg-success rounded-pill text-uppercase ms-2">
                    New</span>{{/if}}
            </div>

            <div class="card-body">

                <p>{{description}}</p>

            </div>

        </div>
    </div>
    {{/each}}
</div>