<div class="row g-2">
    {{#each cards}}
    <div class="col-4">
        <div class="card">
            <img class="card-img-top" src="{{image}}">
            <div class="card-body">
                <h5 class="card-title">{{title}}
                    {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase ms-2">
                        Hot</span>{{/if}}
                    {{#if isNew}}<span class="badge text-bg-primary rounded-pill text-uppercase ms-2">
                        New</span>{{/if}}
                </h5>
                <p>{{description}}</p>

            </div>
        </div>
    </div>
    {{/each}}
</div>