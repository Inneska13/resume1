{{#each goodsList}}
<div class="col-6">
    <div class="card m-1">
        {{#with this}}
        <img class="card-img-top" src="{{img}}" alt="{{name}}">
        <div class="card-body">
            <div class="d-flex align-items-center">
                {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase ms-2">
                    Hot</span>{{/if}}
                {{#if isNew}}<span class="badge text-bg-primary rounded-pill text-uppercase ms-2">
                    New</span>{{/if}}
            </div>

            {{#if isFast}}
            <div class="my-2">
                <span class="badge text-bg-success ms-2">
                    Швидка доставка</span>
            </div>
            {{/if}}

            {{#if isFree}}
            <div class="my-2">
                <span class="badge text-bg-secondary ms-2">
                    Безкоштовна доставка</span>
            </div>
            {{/if}}
            <div class="card-title">
                <h6 class="pt-2 pb-2">{{name}}</h6>
            </div>

            {{#with review}}
            <p>{{amount}} {{text}}</p>
            {{/with}}
            <div>
                <h5><b>{{price}}</b></h5>
            </div>
            <div class="pt-2 pb-2">
                {{delivery}}
            </div>

            {{#each buttons}}
            <div class="mt-2 mb-2">
                {{#if isPrimary}}<button class="btn btn-primary me-6" href="{{link}}">{{text}}</button>{{/if}}

                {{#if isSecondary}}<button class="btn btn-secondary me-6" href="{{link}}">{{text}}</button>{{/if}}
            </div>
            {{/each}}
            {{#each characteristics}}
            {{#with this}}
            <div class="mt-3 mb-2">
                <ul>
                    <li>{{title}}: {{value}}</li>
                </ul>
            </div>
            {{/with}}
            {{/each}}
            {{/with}}
        </div>
    </div>
</div>
{{/each}}