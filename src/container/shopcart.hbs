<main class="py-5">
    <div class="row col-12 d-flex justify-content-between py-5">

        <div class="col-9">
            {{#with header}}
            <h1>{{title}}</h1>

        </div>


        <div class="col-3">
            {{#with button}}
            <button class="btn btn-outline-secondary" href="{{link}}">{{text}}</button>

            {{/with}}
        </div>
        {{/with}}
    </div>

    <div class="mb-5">
        <hr>
    </div>


    <section>
        {{#each goodsBlock}}
        {{> cartGoodsItem}}
        {{/each}}
    </section>

    <div class="mb-5 mt-5">
        <hr>
    </div>

    <section class="col-12">
        <div class="row d-flex justify-content-between">

            <div class="col-8">
                {{#with total}}
                <h2>{{title}}</h2>
                <strong>
                    <h1>{{amount}}</h1>
                </strong>
                <p>{{delivery}}</p>
            </div>


            <div class="col-4">
                {{#each buttons}}
                <div class="mb-3">
                    {{#if isSuccess}} <button class="btn btn-success" href="{{link}}">{{text}}</button>{{/if}}
                </div>
                <div class="mb-3">
                    {{#if isOutline}} <button class="btn btn-outline-success" href="{{link}}">{{text}}</button>{{/if}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>

    <div class="mb-5 mt-5">
        <hr>
    </div>

    <section class="col-12">
        {{#with goodsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        {{> shopcard}}
        {{/with}}
    </section>

    <div class="mb-5 mt-5">
        <hr>
    </div>

    <section class="col-12">
        {{#with subscribe}}

        <div class="card">
            <div class="row">
                <div class="card-body text-bg-dark d-flex justify-content-between">
                    <div>
                        <h2>{{header}}</h2>
                        <p>{{description}}</p>
                    </div>
                    <div class="d-flex align-items-center">
                        {{#each buttons}}
                        <a href="{{link}}"><button class="btn btn-primary  mx-1">{{text}}</button></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <div class="mt-5 mb-5">
        <hr>
    </div>
</main>