<header>
    {{#with navigation}}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h1>{{Logo}}</h1>
                    <div class="nav d-flex align-items-center">
                        {{#each links}}
                        <div class="nav-item">
                            <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{href}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</header>
<main>
    <section class="col-12">
        {{#with newsBlock}}
        <h2 class="text-center py-5">{{title}}</h2>


        <div class="row g-2">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">{{title}}
                        {{#if isTop}}<span class="badge text-bg-danger rounded-pill text-uppercase ms-2">
                            Top</span>{{/if}}
                        {{#if isNew}}<span class="badge text-bg-success rounded-pill text-uppercase ms-2">
                            New</span>{{/if}}
                    </div>

                    <div class="card-body">

                        <p>{{description}}</p>

                    </div>

                </div>
            </div>
            {{/each}}
        </div>

        {{/with}}
    </section>
    <hr>

    <section class="col-12 py-4 ">
        {{#with goodsBlock}}

        <div class="row g-2">

            <div class="col-12 mb-5">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a href="/#"
                            class="nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled{{/if}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>



            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}
                            {{#if isHot}}<span class="badge text-bg-warning rounded-pill text-uppercase ms-2">
                                Hot</span>{{/if}}
                            {{#if isNew}}<span class="badge text-bg-primary rounded-pill text-uppercase ms-2">
                                New</span>{{/if}}
                        </h5>
                        <p>{{description}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>

    <hr>

    <section class="col=12 py-3">
        {{#with subscribe}}

        <div class="card">
            <div class="row">
                <div class="card-body text-bg-dark d-flex justify-content-between">
                    <div>
                        <h2>{{header}}</h2>
                        <p>{{description}}</p>
                    </div>
                    <div class="d-flex align-items-center">
                        {{#each buttons}}
                        <a href="{{link}}"><button class="btn btn-primary  mx-1">{{text}}</button></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>

    <hr>

    <section class="col=12 py-3">
        {{#with service}}
        <div class="card">
            <div class="row">
                <div class="card-body text-bg-success text-center">
                    <div>
                        <h2>{{title}}</h2>
                        <p>{{description}}</p>

                        {{#each buttons}}
                        <a href="{{link}}"><button class="btn btn-primary  mx-1">{{text}}</button></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>

    <hr>

    <section class="col=12">
        <div class="row g-4">
            {{#each footer}}
            <div class="nav col-2">
                <div>
                    {{#each this}}
                    <div>
                        <a class="nav-link{{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                    </div>
                    {{/each}}
                </div>

            </div>

            {{/each}}
        </div>
    </section>

</main>