<main class="py-5">

    <h1 class="py-3">{{header}}</h1>


    <div class="row d-flex justify-content-between">
        <div class="col-8">

            {{#with contacts_data}}
            <h2>{{title}}</h2>
            <div>
                {{#each buttons}}
                {{#if isPrimary}}<span class="btn btn-warning ">
                    {{text}}</span>{{/if}}
                {{#if isOutline}}<span class="btn btn-outline-warning ms-3">{{text}}</span>{{/if}}
                {{/each}}
            </div>

            {{#with form}}

            <div class="row  col-12 ">
                {{#with input}}
                <div class=" col-6 mt-3 ">
                    {{#with surname}}
                    <div class=" pt-1">
                        <label class="form-label">{{label}}</label>
                    </div>
                    <div>
                        <input class="form-control" placeholder="{{placeholder}}">
                    </div>
                    <div class="pt-1">
                        <div class="form-text">{{caption}}</div>
                    </div>
                    {{/with}}
                </div>



                <div class="col-6 ">
                    {{#with name}}
                    <div class="mt-3">
                        <div class=" pt-1">
                            <label class="form-label">{{label}}</label>
                        </div>
                        <div>
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                        <div class="pt-1">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>

                    {{/with}}
                </div>



                <div class="col-6 ">
                    {{#with phone}}
                    <div class="mt-3 mb-3">
                        <div class=" pt-1">
                            <label class="form-label">{{label}}</label>
                        </div>
                        <div>
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                        <div class="pt-1">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                </div>




                <div class="col-6 ">
                    {{#with email}}
                    <div class="mt-3 mb-3">
                        <div class=" pt-1">
                            <label class="form-label">{{label}}</label>
                        </div>
                        <div>
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                        <div class="pt-1">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
                <div>
                    <hr>
                </div>

                <div class="col-12 mt-3">
                    {{#each switch}}
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" {{#if isActive}}checked{{/if}}>
                        <label class="form-check-label">{{text}}</label>
                    </div>
                    {{/each}}
                </div>
                {{/with}}

                <div>
                    <hr>
                </div>
            </div>

            {{/with}}


            <div class="row  col-12 mb-4 pb-4">
                {{#with delivery}}
                <h2 class="mb-3">{{title}}</h2>

                <div class="card mb-4">
                    <div class="row ">
                        {{#each select}}
                        <div class="col-6 pb-3 pt-3">
                            <label class="form-label">{{label}}</label>
                            <select class="form-select ">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{this.value}}">{{this.text}}</option>
                                {{/each}}
                            </select>
                        </div>

                        {{/each}}
                    </div>
                </div>

                {{#each delivery_type}}
                <div class="col-12">

                    <div class="form-check">
                        <label class="form-check-label me-2 ">
                            {{type}}
                        </label>
                        <label class="ms-5">{{value}}</label>
                        <input name="food" type="radio" class="form-check-input">
                    </div>
                </div>
                {{/each}}
                <div>
                    <br>
                    <hr>
                </div>
                {{#with payment}}

                <h2 class="mb-4">{{title}}</h2>
                <div class="col-12">

                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label me-2 mb-2">
                            {{type}} <p>{{description}}</p>
                        </label>

                        <input name="food" type="radio" class="form-check-input">
                    </div>
                    {{/each}}
                </div>

                {{/with}}
                <div>
                    <br>
                    <hr>
                </div>

                {{#with contact}}
                <h2 class="mb-4">{{title}}</h2>
                <div class="row">
                    <div class="col-6 ">
                        {{#with surname}}
                        <div class="mt-3">
                            <div class=" pt-1">
                                <label class="form-label">{{label}}</label>
                            </div>
                            <div>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                            <div class="pt-1">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6 ">
                        {{#with name}}
                        <div class="mt-3">
                            <div class=" pt-1">
                                <label class="form-label">{{label}}</label>
                            </div>
                            <div>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                            <div class="pt-1">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6 ">
                        {{#with phone}}
                        <div class="mt-3">
                            <div class=" pt-1">
                                <label class="form-label">{{label}}</label>
                            </div>
                            <div>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                            <div class="pt-1">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>

                        {{/with}}
                    </div>

                    <div class="col-6 ">
                        {{#with email}}
                        <div class="mt-3">
                            <div class=" pt-1">
                                <label class="form-label">{{label}}</label>
                            </div>
                            <div>
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                            <div class="pt-1">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>

                        {{/with}}
                    </div>
                </div>
                {{/with}}

                <div>
                    <br>
                    <hr>
                </div>

                {{#with coment}}
                <div class="col-12">
                    <div class="mt-3">
                        <div class=" pt-1">
                            <label class="form-label">{{label}}</label>
                        </div>
                        <div>
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                    </div>
                </div>
                {{/with}}

                <div>
                    <br>
                    <hr>
                </div>


            </div>
            {{/with}}

            {{#with coupon}}
            <h2 class="mb-4">{{title}}</h2>
            {{#with select}}
            {{#with availabel_coupon}}
            <div class="col-12 pb-3 pt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-lg">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{this.value}}">{{this.text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}

            {{#with friend_coupon}}
            <div class="col-12 pb-3 pt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{this.value}}">{{this.text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
            {{/with}}

            {{#with add}}
            {{#with friend}}
            <div class="mt-3">
                <div class=" pt-1">
                    <label class="form-label">{{label}}</label>
                </div>
                <div>
                    <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                </div>
                <div class="pt-1">
                    <div class="form-text">{{caption}}</div>
                </div>
            </div>
            {{/with}}

            {{#with colleague}}
            <div class="mt-3">
                <div class=" pt-1">
                    <label class="form-label">{{label}}</label>
                </div>
                <div>
                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                </div>
                <div class="pt-1">
                    <div class="form-text">{{caption}}</div>
                </div>
            </div>
            {{/with}}
            {{/with}}


            {{/with}}

            <div>
                <br>
                <hr>
            </div>

            {{#with quiz}}
            <h2 class="mb-4">{{title}}</h2>
            {{#with preference}}
            <div class="col-12">
                <div class="form-label">{{title}}</div>
                {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input name="food" type="radio" class="form-check-input">
                </div>
                {{/each}}
            </div>
            {{/with}}
            {{#with your_expirience}}
            <div class="mt-3">
                <div class=" pt-1">
                    <label class="form-label">{{label}}</label>
                </div>
                <div>
                    <input class="form-control form-control-sm">
                </div>
            </div>
            {{/with}}

            {{#with purchase_frequency}}
            <div class="col-12 pb-3 pt-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{this.value}}">{{this.text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}

            {{#with factors}}
            <div class="col-12">
                <div class="form-label">{{title}}</div>
                {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input name="food" type="checkbox" class="form-check-input">
                </div>
                {{/each}}
            </div>
            {{/with}}
            {{/with}}


        </div>
        <div class='col-4 gy-2'>
            <div class='card p-2 mb-4'>
                <div class="card-body">
                    {{#each action_block}}
                    {{#if isPrimary}}
                    <div class="mb-3">
                        <span class="btn btn-success">
                            {{text}}</span>
                    </div>
                    {{/if}}
                    {{#if isDanger}}
                    <div class="mb-3">
                        <span class="btn btn-danger">
                            {{text}}</span>
                    </div>
                    {{/if}}
                    {{#if isInfo}}
                    <div class="mb-3">
                        <span class="btn btn-info">
                            {{text}}</span>
                    </div>
                    {{/if}}

                    {{/each}}
                </div>
            </div>

            <div class='card p-1 mb-2'>
                <div class="card-body">
                    {{#with total}}
                    <h3>{{title}}</h3>
                    {{#each item_list}}

                    <div>{{name}}: {{price}}</div>
                    {{/each}}
                    <hr>
                    {{#each additional_info}}
                    <div>{{text}}:{{value}}</div>
                    {{/each}}
                    <hr>
                    {{#with total_price}}
                    <div>{{text}}:{{value}}</div>
                    {{/with}}
                    <hr>
                    {{#each button}}
                    {{#if isPrimary}}<span class="btn btn-primary mb-2">
                        {{text}}</span>{{/if}}
                    {{#if isOutline}}<span class="btn btn-outline-primary pt-6 ">{{text}}</span>{{/if}}
                    {{/each}}

                    {{/with}}
                </div>
            </div>

        </div>



    </div>


</main>